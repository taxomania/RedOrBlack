<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:id="@+id/layout"
    android:background="@color/grey">
    <LinearLayout android:padding="10dip" android:orientation="vertical"
        android:layout_height="wrap_content" android:layout_width="fill_parent">
        <TextView android:text="RED" android:textColor="@color/red"
            android:gravity="left" android:layout_height="wrap_content"
            android:layout_width="fill_parent" android:textSize="30sp" />
        <TextView android:text="OR" android:textColor="@color/white"
            android:gravity="center" android:layout_height="wrap_content"
            android:layout_width="fill_parent" android:textSize="30sp" />
        <TextView android:text="BLACK" android:textColor="@color/black"
            android:gravity="right" android:layout_height="wrap_content"
            android:layout_width="fill_parent" android:textSize="30sp" />
    </LinearLayout>
    <fragment android:name="taxomania.games.redorblack.GameUiFragment"
        android:id="@+id/fragment" android:layout_height="fill_parent"
        android:layout_width="fill_parent" />
</LinearLayout>
